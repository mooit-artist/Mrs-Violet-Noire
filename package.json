{
  "name": "mrs-violet-noire-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Mrs. Violet Noire - A sophisticated book review website specializing in mystery novels and literary analysis",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=5500 --entry-file=index.html --open=/",
    "start": "npm run dev",
    "validate": "html-validate **/*.html",
    "format": "prettier --write **/*.html **/*.css **/*.js",
    "build": "npm run format && npm run validate",
    "deploy": "npm run build && git add . && git commit -m 'Deploy website' && git push origin main",
    "setup": "npm install",
    "llm:check": "ollama list",
    "llm:pull": "ollama pull llama3.2 && ollama pull codellama && ollama pull nomic-embed-text",
    "llm:start": "ollama serve",
    "llm:test": "make llm-test"
  },
  "keywords": [
    "book-reviews",
    "mystery-novels",
    "literature",
    "mrs-violet-noire",
    "book-blog",
    "literary-analysis"
  ],
  "author": "Mrs. Violet Noire",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "eslint": "^8.57.0",
    "html-validate": "^8.7.4",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mooit-artist/Mrs-Violet-Noire.git"
  },
  "homepage": "https://mooit-artist.github.io/Mrs-Violet-Noire"
}
